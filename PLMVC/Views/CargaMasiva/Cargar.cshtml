@model ML.Result
@{
    ViewBag.Title = "Cargar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h1>Carga Masiva de Materias</h1>
    <h5>Seleccione con que tipo de archivo desea hacer la carga</h5>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <a><input type="submit" value="Excel" class="btn btn-success col-md-12" id="xlsx" /></a>
            <input type="file" id="excel" style="display: none" />
        </div>
        <div class="col-md-6">
            <a><input type="submit" value="TXT" class="btn btn-primary col-md-12" id="txt" /></a>
        </div>
    </div>
    @if (Model.Objects.Count > 0)
    {
        <table class="table table-dark table-hover table-striped " id="myTable">
            <thead>
                <tr class="table-secondary">
                    <th>Numero Fila</th>
                    <th>Error</th>
                </tr>
            </thead>
            <tbody>
                @foreach (ML.ErrorExcel error in Model.Objects)
                {
                    <tr>
                        <td>@error.IdRegistro</td>
                        <td>@error.Mensaje</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {

    }
</div>

@Scripts.Render("~/bundles/jquery")
<script type="text/javascript">


    $('#xlsx').click(function () {
        $('#excel').toggle('slow', function () {
        });
    });
</script>