@model ML.Usuario
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="text-center">
    <h2>Usuarios</h2>
    <h5>Lista de usuarios registrados</h5>
</div>
<hr />

<a href="@Url.Action("Form", "Usuario")" class="btn btn-success">Agregar</a>
@if (Model.Usuarios.Count > 0)
{
    <table class="table table-dark table-hover">
        <thead>
            <tr class="table-secondary">
                <th>Editar</th>
                <th>ID Usuario</th>
                <th>Nombre</th>
                <th>Apellido Paterno</th>
                <th>Rol</th>
                <th>Eliminar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (ML.Usuario usuario in Model.Usuarios)
            {
                <tr>
                    <td><a class="btn btn-warning" href="@Url.Action("Form", "Usuario", new {IdUsuario = usuario.IdUsuario})"><i class="fa-solid fa-pencil"></i></a></td>
                    <td>@usuario.IdUsuario</td>
                    <td>@usuario.Nombre</td>
                    <td>@usuario.ApellidoPaterno</td>
                    @if (usuario.Rol.Nombre == "Admin")
                    {
                        <td style="font-weight:bold; color: #18D071"><i class="fa-solid fa-user-tie fa-lg"></i> @usuario.Rol.Nombre</td>
                    }
                    else
                    {
                        <td style="font-weight: bold; color: #75B5F5"><i class="fa-solid fa-user fa-lg"></i> @usuario.Rol.Nombre</td>
                    }
                    <td><a class="btn btn-danger" href="@Url.Action("Delete", "Usuario" ,new {IdUsuario = usuario.IdUsuario})"><i class="fa-solid fa-trash-can" style="color:white;"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning" role="alert">
       No existen registros en la tabla :(
    </div>
}

